{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": [
    "google",
    "plugin:jsdoc/recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "jsdoc",
    "@typescript-eslint"
  ],
  "rules": {
    "indent": ["error", 4],
    "linebreak-style": ["error", "unix"],
    "operator-linebreak": [2, "before", { "overrides": { "?": "before", ":": "before" } }],
    "max-len": ["error", 120],
    "@typescript-eslint/no-unused-vars": ["warn", { "argsIgnorePattern": "next" }],
    "quotes": ["error", "single"],
    "require-jsdoc": "error",
    "semi": ["error", "always"]
  }
}
